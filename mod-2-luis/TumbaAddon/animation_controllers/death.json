{
  "format_version": "1.10.0",
  "animation_controllers":{
    "controller.animation.death": {
      "states": {
        "default": {
          "transitions": [
            {
              "death": "!query.is_ignited && !query.is_alive"
            },
            {
              "death_in_lava": "query.is_ignited && !query.is_alive"
            }
          ],
          "on_entry":[
            "/gamerule sendcommandfeedback false"
          ]
        },
        "death": {
          "transitions": [
            {
              "default": "query.is_alive"
            }
          ],
          "on_entry": [
            "/gamerule sendcommandfeedback true",
            "/summon new:tumba ~~~ minecraft:entity_spawned §c§lTumba",
            "/execute @s ~~~ /tp ~~~",
            "/tp @e[type=item,r=2] ~~~",
            "@s new:key_death"
          ]
        },
        "death_in_lava": {
          "transitions": [
            {
              "default": "query.is_alive"
            }
          ],
          "on_entry": [
            "/gamerule sendcommandfeedback true",
            "/execute @s ~~~ detect ~~~ lava -1 /fill ~1~~1~-1~~-1 cobblestone 0",
            "/summon new:tumba ~~1~ minecraft:entity_spawned §c§lTumba",
            "/execute @s ~~~ /tp ~~~",
            "/tp @e[type=item,r=2] ~~1~",
            "@s new:key_death"
          ]
        }
      }
    }
  }
}